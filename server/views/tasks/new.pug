extends ../layouts/application.pug

block header
  = t('layouts.application.createTask')

block content
  +formFor()(action=route('tasks') method='post')
    +input(task, 'name', value =t('views.tasks.name'), errors)(type="text")
    +textArea(task, 'description', value =t('views.tasks.description'), errors)(type="text")
    +select(task, 'statusId', statuses, value =t('views.tasks.status'),[], errors)
    +select(task, 'executorId', users, value =t('views.tasks.executor'),[], errors)
    +select(task, 'labelIds', labels, value =t('views.tasks.labels'), [], errors)(multiple)
    +submit(task)(value=t('views.tasks.create'))
